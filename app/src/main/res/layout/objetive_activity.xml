<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#93BC91"
                android:orientation="vertical">

                <TextView
                    android:layout_width="424dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="44sp"
                    android:fontFamily="casual"
                    android:textStyle="normal|bold"
                    android:text="@string/lb_metas"
                    android:textAlignment="center"
                    android:layout_gravity="center" />

            </LinearLayout>
        </TableRow>

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"/>

                    <TextView
                        android:text="@string/lb_nombreMeta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:textStyle="normal|bold"
                        android:fontFamily="casual"
                        android:typeface="normal"
                        android:textAllCaps="false"
                        android:textSize="18sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.41"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/txt_nombre"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"/>

                </LinearLayout>

            </LinearLayout>

        </TableRow>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="37dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:text="@string/lb_fechaObejetivo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:fontFamily="casual"
                        android:typeface="normal"
                        android:textSize="18sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime"
                        android:ems="10"
                        android:id="@+id/txt_fecha_obj"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"/>

                </LinearLayout>

            </LinearLayout>

        </TableRow>

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"/>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="38dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/lb_fechaInicio"
                        android:fontFamily="casual"
                        android:typeface="normal"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime"
                        android:ems="10"
                        android:id="@+id/txt_fecha_inicio"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"/>
                </LinearLayout>

            </LinearLayout>

        </TableRow>

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="41dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:text="@string/lb_valorMeta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="casual"
                        android:typeface="normal"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/txt_precio"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"/>
                </LinearLayout>

            </LinearLayout>

        </TableRow>

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3.21">
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_valor_fin"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:id="@+id/btn_ingress"
            android:textSize="24sp"
            android:background="?android:attr/colorPressedHighlight"
            android:textColor="@android:color/background_light"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:elevation="0dp"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/btn_ingress" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="2.70" />
    </TableLayout>

</LinearLayout>